<body>
    <div class="container">
          {{> header}}

        <main>
            <h1>Edit Cube</h1>
            <div class="form">
                <form method="POST">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" value="{{cube.name}}">
                    <label for="description">Description</label>
                    <textarea id="description" name="description">{{cube.description}}</textarea>
                    <label for="image">ImageUrl</label>
                    <input type="text" id="image" name="imageUrl" value="{{cube.imageUrl}}">
                    <label for="difficulty">Difficulty</label>
                    <select id="difficulty" name="difficultyLevel" />
                    {{#each difficultyLevels}}
                        <option value="{{this.key}}" {{#if this.selected}} selected {{/if}}>{{this.label}}</option>
                    {{/each}}
                    
                    </select>
                    <input type="submit" value="Edit">
                </form>
            </div>
        </main>
    </div>
    <footer>@Cubicle: Exercise for Express.js and Handlebars</footer>
